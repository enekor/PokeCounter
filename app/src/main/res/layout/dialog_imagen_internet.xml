<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content" android:padding="25dp">

    <TextView
            android:text="Internet"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="30dp" android:gravity="center"/>
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:id="@+id/radioGroup"
            android:layout_marginTop="40dp">
        <RadioButton
                android:text="Via url de internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/viaLink" android:layout_marginEnd="25dp"
                android:layout_marginStart="15dp"/>
        <RadioButton
                android:text="pokeapi (not yet)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/viaAPI" android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp" android:focusable="false" android:clickable="false"/>
    </RadioGroup>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imageResourceText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:hint="URL imagen"
            android:layout_marginTop="25dp" android:minHeight="48dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/imageResourceText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>